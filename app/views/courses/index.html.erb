<% page_title "All Courses" %>

<div class="courses-container">
  <h1 class="page-title">Available Courses</h1>

  <div class="courses-grid">
    <% @courses.each do |course| %>
      <div class="course-card">
        <div class="course-image">
          <svg width="100%" height="200" viewBox="0 0 400 200">
            <defs>
              <linearGradient id="gradient<%= course.id %>" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#6366f1;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#8b5cf6;stop-opacity:1" />
              </linearGradient>
            </defs>
            <rect width="400" height="200" fill="url(#gradient<%= course.id %>)"/>
            <text x="200" y="90" text-anchor="middle" font-family="Arial" font-size="18" fill="white" font-weight="bold">
              <%= truncate(course.title, length: 25) %>
            </text>
            <text x="200" y="120" text-anchor="middle" font-family="Arial" font-size="14" fill="white">
              <%= course.school %>
            </text>
          </svg>
        </div>

        <div class="course-content">
          <h3 class="course-title"><%= course.title %></h3>
          <p class="course-school"><%= course.school %></p>
          <div class="course-details">
            <span class="course-hours"><%= course.total_hours %> hours</span>
            <span class="course-price"><%= course.formatted_price %></span>
            <span class="course-time"><%= course.time_period.capitalize %></span>
          </div>
          <p class="course-date">Starts: <%= course.date.strftime("%B %d, %Y") %></p>
          <p class="course-schedule"><%= format_time_period(course.time_period) %></p>

          <%= link_to "View Details", course_path(course), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
