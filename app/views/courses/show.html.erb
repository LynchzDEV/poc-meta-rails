<% page_title @course.title %>

<div class="course-detail">
  <div class="course-header">
    <div class="course-image-large">
      <svg width="100%" height="300" viewBox="0 0 600 300">
        <defs>
          <linearGradient id="courseGradient" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#4f46e5;stop-opacity:1" />
            <stop offset="100%" style="stop-color:#7c3aed;stop-opacity:1" />
          </linearGradient>
        </defs>
        <rect width="600" height="300" fill="url(#courseGradient)"/>
        <text x="300" y="120" text-anchor="middle" font-family="Arial" font-size="24" fill="white" font-weight="bold">
          <%= @course.title %>
        </text>
        <text x="300" y="160" text-anchor="middle" font-family="Arial" font-size="18" fill="white">
          <%= @course.school %>
        </text>
        <text x="300" y="200" text-anchor="middle" font-family="Arial" font-size="16" fill="white">
          <%= @course.total_hours %> Hours • <%= @course.formatted_price %> • <%= @course.time_period.capitalize %>
        </text>
      </svg>
    </div>
  </div>

  <div class="course-info">
    <h1 class="course-title"><%= @course.title %></h1>

    <div class="course-meta">
      <div class="meta-item">
        <strong>School:</strong> <%= @course.school %>
      </div>
      <div class="meta-item">
        <strong>Duration:</strong> <%= @course.total_hours %> hours
      </div>
      <div class="meta-item">
        <strong>Price:</strong> <%= @course.formatted_price %>
      </div>
      <div class="meta-item">
        <strong>Schedule:</strong> <%= format_time_period(@course.time_period) %>
      </div>
      <div class="meta-item">
        <strong>Start Date:</strong> <%= @course.date.strftime("%B %d, %Y") %>
      </div>
    </div>

    <div class="course-description">
      <h3>About This Course</h3>
      <p><%= simple_format(@course.description) %></p>
    </div>

    <div class="course-actions">
      <%= link_to "Back to Courses", courses_path, class: "btn btn-secondary" %>
      <button class="btn btn-primary">Enroll Now</button>
    </div>
  </div>
</div>
